<div class="wrapper">
  <div class="show__main">
    <div class="show__content">
      <div class="form">
        <%= form_for @content do |f| %>
          <div class="show-left">
            <div class="show-left__top">
              <div class="edit-created">
                <%= @content.created_at.strftime("%Y年%m月%d日") %>
              </div>
              <%= f.select :prefectues,  
              [["北海道"],["青森"],["岩手"],["宮城"],["秋田"],
              ["山形"],["福島"],["茨城"],["栃木"],["群馬"],
              ["埼玉"],["千葉"],["東京"],["神奈川"],["新潟"],
              ["富山"],["石川"],["福井"],["山梨"],["長野"],
              ["岐阜"],["静岡"],["愛知"],["三重"],["滋賀"],
              ["京都"],["大阪"],["兵庫"],["奈良"],["和歌山"],
              ["鳥取"],["島根"],["岡山"],["広島"],["山口"],
              ["徳島"],["香川"],["愛媛"],["高知"],["福岡"],
              ["佐賀"],["長崎"],["熊本"],["大分"],["宮崎"],
              ["鹿児島"],["沖縄"]], 行き先：class: 'edit-prefectues', include_blank: "都道府県 選択" %>
            </div>
            <%= f.text_field :title, class: 'edit-title', placeholder: 'タイトル' %> 
              <%= f.label :image, class: 'edit-image' do %>
                <i class="fas fa-image icon"></i>
                <%= f.file_field :image, class: 'file' %>
              <%= image_tag @content.image.url, class:"edit-image__originally", size:"260x165"%> 
              <div class="arrow">↓</div>
              <img id="preview", size="230x147">
            <% end %>
          </div>

          <div class="edit-right">
            <%= f.text_area :text, class: 'edit-text', placeholder: '思い出を書き残そう！！' %>
            <% link_to  content_path(@content.id), class:"edit-box" %>
              <%= f.submit '保存する',class: 'content-submit' %>
            <div class="edit-toppage"> 
              <%= link_to 'トップページに戻る', "/" %>
            </div>
          </div>
        <% end %>
      </div> 
    </div>
  </div>
