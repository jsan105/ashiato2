<body>
  <div class="wrapper">
    <div class="user-info">
      <div class="user-info_form">
        <div class="user-info_form-box">
          <h2>Login</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label "eメール" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"user-info-text" %>
            </div>

            <div class="field">
              <%= f.label "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class:"user-info-text"%>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, class:"login-check_box" %>
                <%= f.label :remember_me, "ログイン状態を維持する" %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Login", class:"login-submit" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>  
</body>